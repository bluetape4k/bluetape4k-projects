{
  "env": {
    "ENABLE_TOOL_SEARCH": "true",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "Skill(git-commit)",
      "Bash(omc update:*)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "Bash(curl:*)",
      "Bash(ls:*)",
      "Bash(./gradlew:*)",
      "Bash(cat:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(jar tf:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "notionMCP",
    "jetbrainsMCP"
  ],
  "enabledPlugins": {
    "oh-my-claudecode@omc": true
  }
}
